@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    This is a local version of Planning Poker. Please connect to the existing session or create a new one.
</div>
<div class="container">
    <div class="row">
        <div class="col-6">
            <form asp-controller="Home" asp-action="Session" method="get">
                <input type="text" name="id" placeholder="Session id">
                <input type="text" name="userName" placeholder="User name">
                <input type="submit" class="btn btn-primary" value="Connect to session">
            </form>
        </div>
        <div class="col-6">
            <a class="btn btn-secondary" asp-action="Create">Create session</a>
        </div>
    </div>
</div>